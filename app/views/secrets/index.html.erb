<h1>Seeks Secret Index</h1>
<div class='flash'>
	<% if flash[:errors] %>
		<div class='red flash_box'>
			<p><%= flash[:errors] %></p>
		</div>
	<% end %>
	<% if flash[:action_status] %>
		<p class='green flash_box'><%= flash[:action_status] %></p>
	<% end %>
</div>
<% if @secret_list %>
	<p>Everyone's secrets!</p>
	<ul>
		<% @secret_list.each do |this_secret| %>
			<li><%= this_secret.content %></li>
		<% end %>
	</ul>
<% end %>
<div class='footer'>
	<p>
		<a href="/">View Users</a> | <a href="/users/<%= current_user[:id] %>">My Profile</a>
	</p>
	<div class='login_status'>
		<% if current_user %>
			<form action='/sessions' method='post'>
				<p>
					Currently logged in as <%= current_user[:name] %>.
					<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"> 
					<input type='hidden' name='_method' value='delete'>
					<input type='submit' value='Log out'>
				</p>
			</form>
		<% end %>
	</div>
</div>