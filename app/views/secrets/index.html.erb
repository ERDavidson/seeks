<h1>Seeks Secret Index</h1>
<div class='flash'>
	<% if flash[:errors] %>
		<div class='red flash_box'>
			<p><%= flash[:errors] %></p>
		</div>
	<% end %>
	<% if flash[:action_status] %>
		<p class='green flash_box'><%= flash[:action_status] %></p>
	<% end %>
</div>
<% if @secret_list %>
	<p>Everyone's secrets!</p>
	<table>
		<% @secret_list.each do |this_secret| %>
			<tr>
				<td><%= this_secret[:content] %></td>
				<td>
					<% if mine(current_user, this_secret) == true %>
						<form action="/secrets/<%= this_secret[:id] %>" method='post'>
							<input type='hidden' name='_method' value='delete'>
							<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"> 
							<input type='submit' value='Delete Secret'>
						</form>
					<% end %>
				</td>
			</tr>
		<% end %>
	</table>
<% end %>
<div class='footer'>
	<p>
		<a href="/">View Users</a> | <a href="/users/<%= current_user[:id] %>">My Profile</a>
	</p>
	<div class='login_status'>
		<% if current_user %>
			<form action='/sessions' method='post'>
				<p>
					Currently logged in as <%= current_user[:name] %>.
					<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"> 
					<input type='hidden' name='_method' value='delete'>
					<input type='submit' value='Log out'>
				</p>
			</form>
		<% end %>
	</div>
</div>