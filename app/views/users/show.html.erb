<h1>User Profile: <%= @view_user[:name] %></h1>
<div class='flash'>
	<% if flash[:errors] %>
		<div class='red flash_box'>
			<p><%= flash[:errors] %></p>
		</div>
	<% end %>
	<% if flash[:action_status] %>
		<p class='green flash_box'><%= flash[:action_status] %></p>
	<% end %>
</div>
<table>
	<tr>
		<td>User ID:</td>
		<td><%= @view_user[:id] %></td>
	</tr>
	<tr>
		<td>Name:</td>
		<td><%= @view_user[:name] %></td>
	</tr>
	<% if current_user %>
		<tr>
			<td>Email:</td>
			<td><%= @view_user[:email] %></td>
		</tr>
		<tr>
			<td>Digest:</td>
			<td><%= @view_user[:password_digest] %></td>
		</tr>
	<% end %>
</table>
<div class='footer'>
	<p>
		<a href="/">User Index</a>
		<% if current_user[:id].to_s == @view_user[:id].to_s %>
			 | <a href="/users/<%= current_user[:id] %>/edit">Edit Profile</a>
		<% end %>
	</p>
	<div class='login_status'>
		<% if current_user %>
			<form action='/sessions' method='post'>
				<p>
					Currently logged in as <%= current_user[:name] %>.
					<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"> 
					<input type='hidden' name='_method' value='delete'>
					<input type='submit' value='Log out'>
				</p>
			</form>
		<% end %>
	</div>
</div>